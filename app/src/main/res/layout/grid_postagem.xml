<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--tornam as fotos quadradas-->
    <com.example.android.receitaboa.helper.SquareImageView
        android:id="@+id/fotoReceitaPerfil"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/avatar" />

    <ProgressBar
        android:id="@+id/progressGridPerfil"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/fotoReceitaPerfil"
        app:layout_constraintEnd_toEndOf="@+id/fotoReceitaPerfil"
        app:layout_constraintStart_toStartOf="@+id/fotoReceitaPerfil"
        app:layout_constraintTop_toTopOf="@+id/fotoReceitaPerfil" />

    <TextView
        android:id="@+id/textNomeReceitaPerfil"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/background_botao"
        android:fontFamily="@font/alegreya"
        android:gravity="center"
        android:text="Pudim de Leite Condensado"
        android:textColor="@color/colorBlueDark"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/fotoReceitaPerfil"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fotoReceitaPerfil"
        app:layout_constraintTop_toBottomOf="@+id/fotoReceitaPerfil" />
</androidx.constraintlayout.widget.ConstraintLayout>