<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/background_caixa_texto2"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageListaFotoReceita"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_margin="4dp"
        android:background="@drawable/background_botao2"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/cloche_tableware" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textNomeReceita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="8"
            android:background="@drawable/background_botao2"
            android:fontFamily="@font/alegreya"
            android:gravity="center"
            android:text="Nome"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textQtdPessoasServidas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/background_botao2"
            android:fontFamily="@font/alegreya"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>